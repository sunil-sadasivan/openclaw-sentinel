{
  "name": "@openclaw/sentinel",
  "version": "0.1.0",
  "description": "Real-time endpoint security monitoring plugin for OpenClaw",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "node --test dist/__tests__/*.test.js",
    "lint": "eslint src/",
    "prepublishOnly": "npm run build"
  },
  "openclaw": {
    "extensions": [
      "./dist/index.js"
    ]
  },
  "files": [
    "dist/",
    "openclaw.plugin.json",
    "osquery.conf",
    "README.md"
  ],
  "keywords": [
    "openclaw",
    "openclaw-plugin",
    "security",
    "endpoint-security",
    "edr",
    "osquery",
    "macos",
    "monitoring"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sunil-sadasivan/openclaw-sentinel.git"
  },
  "dependencies": {
    "@sinclair/typebox": "^0.34.0"
  },
  "devDependencies": {
    "typescript": "^5.7.0",
    "@types/node": "^22.0.0"
  },
  "engines": {
    "node": ">=20"
  }
}
